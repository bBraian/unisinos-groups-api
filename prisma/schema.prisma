generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model RequestLog {
  id        Int      @id @default(autoincrement())
  ip        String
  timestamp DateTime @default(now())

  @@map("logs")
}

model Course {
  id        Int         @id @default(autoincrement())
  name      String
  createdAt DateTime    @default(now()) @map(name: "created_at")
  updatedAt DateTime    @updatedAt @map(name: "updated_at")
  Subject   Subject[]
  PrSubject PrSubject[]

  @@map("courses")
}

model Feedback {
  id        Int      @id @default(autoincrement())
  user_name String
  feedback  String   @db.Text
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  @@map("feedbacks")
}

model Subject {
  id    Int     @id @default(autoincrement())
  title String
  image String?

  courseId Int @map("course_id")

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  course Course @relation(fields: [courseId], references: [id])
  links  Link[]

  @@map("subjects")
}

model Link {
  id        Int    @id @default(autoincrement())
  title     String
  link      String
  type      String
  subjectId Int    @map("subject_id")

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  subject Subject @relation(fields: [subjectId], references: [id])

  @@map("links")
}

model PrSubject {
  id     Int     @id @default(autoincrement())
  title  String
  image  String?
  status String

  subjectId Int? @map("subject_id")
  courseId  Int  @map("course_id")

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  course Course @relation(fields: [courseId], references: [id])

  @@map("pr_subjects")
}

model PrLink {
  id          Int    @id @default(autoincrement())
  title       String
  link        String
  type        String
  prSubjectId Int?   @map("pr_subject_id")
  subjectId   Int?   @map("subject_id")
  linkId      Int?   @map("link_id")
  status      String

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  @@map("pr_links")
}
